<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.rullelinjeapp.customviews.DrawingBoatLines
        android:id="@+id/draw_boat_lines"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="2dp" >

        <ImageButton
            android:id="@+id/boat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boaticon100p_green"
            android:padding="1dp"
            android:scaleType="fitStart"
            android:text="B책t 1"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/boat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boaticon100p_lightred"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:text="B책t 2"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/boat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boaticon100p_orange"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:text="B책t 3"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/boat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boaticon100p_purple"
            android:padding="1dp"
            android:scaleType="fitEnd"
            android:text="B책t 4"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/finnKrengeVinkel_Result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="Finn ny krengevinkel" />

        <Button
            android:id="@+id/save_image_Result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="Lagre bilder" />

        <Button
            android:id="@+id/save_image_Result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="Send bilder" />
    </LinearLayout>

</RelativeLayout>